<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".ui.other.ProfileInfo2Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/profile_verification" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/profile_photo1"
        android:text=""
        android:textColor="@color/white"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_baseline_settings_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profile_info"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_photo1"
        tools:listitem="@layout/item_item"/>

