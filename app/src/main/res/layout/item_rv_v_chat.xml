<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/back">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circularImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ex_img"
        android:src="@drawable/ex_img"
        app:civ_border_width="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"/>


    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_toEndOf="@id/circularImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="17sp"/>
    <TextView
        android:id="@+id/last_chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="That’s hilarious, really · July 16"
        android:textStyle="normal"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name_tv"
        android:layout_marginStart="17dp"
        android:visibility="visible"
        android:layout_toEndOf="@id/circularImageView"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_v"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignEnd="@id/circularImageView"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/status_icon"/>
</RelativeLayout>