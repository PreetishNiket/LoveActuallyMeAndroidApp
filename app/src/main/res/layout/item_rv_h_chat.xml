<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/root1"
    android:orientation="vertical"
    android:layout_marginEnd="10dp"
    android:background="@color/back"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circularImageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ex_img"
                app:civ_border_width="0dp"
                android:src="@drawable/ex_img" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/status_h"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignEnd="@id/circularImageView1"
                android:src="@drawable/status_icon"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/name_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textColor="#fff"
                android:textSize="16sp"
                android:maxLines="2"
                android:textAlignment="center"
                android:layout_marginEnd="1dp"
                android:textStyle="bold"
                android:layout_below="@id/circularImageView1"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="1dp"/>

        </RelativeLayout>


    </RelativeLayout>




</LinearLayout>