<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loveactuallymeandroidapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.auth.PolicyActivity"></activity>
        <activity android:name=".ui.profile.EducationActivity" />
        <activity android:name=".ui.profile.ReligiousActivity" />
        <activity android:name=".ui.profile.SocializingActivity" />
        <activity android:name=".ui.auth.OtpActivity" />
        <activity android:name=".ui.auth.LogInActivity" />
        <activity android:name=".ui.auth.SignUpActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>